{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./lib",
        "strict": true,
        "esModuleInterop": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*"],
    "rules": {
        "no-unused-expressions": "off",
        "@typescript-eslint/no-unused-expressions": 2,
    }
}